{
  "name": "pokemongogo-launcher",
  "appId": "pl.pokemongogo.launcher",
  "version": "0.4.9-dev",
  "description": "A minecraft launcher for PokemonGoGo server",
  "main": "./out/main/index.js",
  "author": "Dominik Jóźwicki <joozvvicki@gmail.com>",
  "homepage": "https://pokemongogo.pl",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "release:win": "electron-builder --win --publish always",
    "release:linux": "electron-builder --linux --publish always",
    "release:mac": "electron-builder --mac --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/vite": "^4.1.14",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "address": "^2.0.3",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "archiver-utils": "^5.0.2",
    "axios": "^1.12.2",
    "basic-ftp": "^5.0.5",
    "date-fns": "^4.1.0",
    "discord-rich-presence": "^0.0.8",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "ftp": "^0.3.10",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5",
    "node-addon-api": "^8.5.0",
    "node-machine-id": "^1.1.12",
    "pinia": "^3.0.3",
    "primevue": "^4.4.1",
    "skin3d": "^0.0.12",
    "socket.io-client": "^4.8.1",
    "ssh2-sftp-client": "^12.0.1",
    "tailwindcss": "^4.1.14",
    "vue-router": "4"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@nuxt/test-utils": "^3.21.0",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/discord-rich-presence": "^0.0.2",
    "@types/electron-devtools-installer": "^4.0.0",
    "@types/node": "^22.16.5",
    "@types/socket.io-client": "^3.0.0",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@vitejs/plugin-vue": "^6.0.0",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vue": "^3.5.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.3"
  }
}
